{
    "name": "vscode-markdown-todo",
    "displayName": "MarkDown To-Do",
    "description": "Collects MarkDown checkboxen in the workspace to an auto-updating Output pane channel",
    "version": "5.0.3",
    "publisher": "TomasHubelbauer",
    "repository": {
        "type": "git",
        "url": "https://github.com/TomasHubelbauer/vscode-markdown-todo.git"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.md"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "markdown-todo.openFile",
                "title": "Open file"
            },
            {
                "command": "markdown-todo.focusHead",
                "title": "Focus header"
            },
            {
                "command": "markdown-todo.focusTodo",
                "title": "Focus to-do"
            },
            {
                "command": "markdown-todo.refreshFile",
                "title": "Refresh file"
            },
            {
                "command": "markdown-todo.removeTodo",
                "title": "Remove to-do"
            },
            {
                "command": "markdown-todo.toggleTodo",
                "title": "Toggle to-do"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "to-do",
                    "name": "MarkDown To-Do"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "group": "navigation",
                    "command": "markdown-todo.refreshFile",
                    "when": "viewItem == file"
                },
                {
                    "group": "navigation",
                    "command": "markdown-todo.removeTodo",
                    "when": "viewItem == todo"
                },
                {
                    "group": "navigation",
                    "command": "markdown-todo.toggleTodo",
                    "when": "viewItem == todo"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "markdown-dom": "0.0.9"
    }
}
